{
  "name": "ampene",
  "version": "0.1.1",
  "private": true,
  "dependencies": {
    "@electron/remote": "^2.0.1",
    "electron-is-dev": "^2.0.0",
    "is-object": "^1.0.2",
    "node-sass": "^6.0.1",
    "react": "^17.0.2",
    "react-click-away-listener": "^2.0.5",
    "react-dom": "^17.0.2",
    "recoil": "^0.5.2",
    "typescript": "^4.4.4"
  },
  "devDependencies": {
    "@craco/craco": "^6.4.0",
    "@types/is-object": "^1.0.2",
    "@types/node": "^16.11.7",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@types/recoil": "^0.0.9",
    "concurrently": "^6.3.0",
    "electron": "^15.3.1",
    "electron-builder": "^22.13.1",
    "react-scripts": "4.0.3",
    "rimraf": "^3.0.2",
    "wait-on": "^6.0.0"
  },
  "main": "electron/main.js",
  "scripts": {
    "rimraf": "rimraf build",
    "start": "craco start --config craco/craco.config.js",
    "build:react:electron": "BUILD_PATH='./build/react' PUBLIC_URL=. craco build --config craco/craco.config.js",
    "build:electron": "npm run build:react:electron && electron-builder --dir",
    "distribute": "npm run build:react:electron && electron-builder",
    "dev": "concurrently -k \"BROWSER=none npm start\" \"npm run dev:electron\"",
    "dev:electron": "wait-on tcp:3000 && electron ."
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "build": {
    "extends": null,
    "productName": "Ampene",
    "appId": "com.fritiof-rusck.ampene",
    "files": [
      "build/react/**/*",
      "electron/**/*"
    ],
    "directories": {
      "output": "build/electron"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "electron/assets/osx/icon.icns",
      "category": "public.app-category.utilities",
      "fileAssociations": [
        {
          "ext": [
            "math"
          ],
          "icon": "electron/assets/osx/icon.icns",
          "description": "A math file",
          "role": "Viewer"
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
